{
  "name": "testament-simulation-runner-service",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/testament-team/testament-simulation-runner-service.git"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "build:watch": "nest build --watch",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "copyfiles test/* dist && mocha",
    "test:debug": "mocha --inspect-brk",
    "test:cov": "nyc mocha",
    "open:cov": "open coverage/index.html",
    "docker:build": "docker build -t testament-simulation-runner-service .",
    "docker:run": "docker run --rm -p 8081:8081 --name testament-simulation-runner-service testament-simulation-runner-service",
    "docker:buildAndRun": "npm run docker:build && npm run docker:run",
    "docker:run:watch": "tsc-watch --onSuccess \"npm run docker:buildAndRun\"",
    "docker:stop": "docker rm -f testament-simulation-runner-service",
    "docker:compose:up": "docker-compose up",
    "docker:compose:down": "docker-compose down"
  },
  "mocha": {
    "env": "dotenv_config_path=test/.env",
    "require": [
      "source-map-support/register",
      "dotenv/config"
    ],
    "full-trace": true,
    "spec": "dist/**/*.spec.js",
    "exit": true
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": false,
    "require": [
      "ts-node/register/transpile-only"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.spec.ts",
      "**/main.ts",
      "coverage",
      "bin",
      "**/*.interface.ts",
      "**/util/test"
    ],
    "reporter": [
      "text",
      "html"
    ]
  },
  "dependencies": {
    "@nestjs/common": "^6.7.2",
    "@nestjs/core": "^6.7.2",
    "@nestjs/platform-express": "^6.7.2",
    "@nestjs/swagger": "^4.6.0",
    "amqplib": "^0.10.0",
    "aws-sdk": "^2.1156.0",
    "chalk": "^4.1.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "dotenv": "^8.2.0",
    "fs-extra": "^8.1.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.3",
    "simple-git": "^3.15.0",
    "strip-ansi": "^6.0.0",
    "swagger-ui-express": "^4.4.0",
    "uuid": "^3.4.0",
    "zip-a-folder": "0.0.12"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@nestjs/cli": "^7.1.5",
    "@nestjs/schematics": "^6.7.0",
    "@nestjs/testing": "^6.7.1",
    "@testdeck/mocha": "^0.1.0",
    "@types/amqplib": "^0.5.13",
    "@types/chai": "^4.2.10",
    "@types/chai-as-promised": "^7.1.2",
    "@types/express": "^4.17.1",
    "@types/fs-extra": "^8.0.1",
    "@types/node": "^12.7.5",
    "@types/supertest": "^2.0.9",
    "@types/uuid": "^3.4.6",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "copyfiles": "^2.4.1",
    "jest": "^26.0.1",
    "mocha": "^7.1.2",
    "nyc": "^15.0.0",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-mockito": "^2.5.0",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.0",
    "typescript": "^3.9.3",
    "utf-8-validate": "^5.0.2"
  }
}
